#!/bin/bash

. i_config

##***********************************************************************************************##
## HOLA!
##***********************************************************************************************##
if [ "$1" = "hola" ]
then

	echo " objetivo: Migra metadatos hacia una nueva versión toba"
	echo "           Las conversiones se corren en la instancia $toba_instancia"

#@ conversion listar                -- Lista las posibles migraciones a aplicar en la version actual de toba
elif [ "$1" = "listar" ]

then
	item /consola/conversiones -l

#@ conversion info VERSION          -- Muestra el detalle de cambios incluidos en una migración específica
elif [ "$1" = "info" ]
then
	item /consola/conversiones -v $2 -i
	
#@ conversion probar VERSION      -- Simula la migración de metadatos hacia una versión específica
elif [ "$1" = "probar" ]
then
	item /consola/conversiones -v $2 -p
	
#@ conversion ejecutar VERSION      -- Ejecuta la migración de metadatos hacia una versión específica
elif [ "$1" = "ejecutar" ]
then
	item /consola/conversiones -v $2
	
else
	ayuda $0
fi