#!/bin/bash
#
. i_config

# Funcionalidad no implementada
#==> * Comentario

##***********************************************************************************************##
## HOLA!
##***********************************************************************************************##

if [ "$1" = "hola" ]
then

	echo " objetivo: Buscar rimas"

##***********************************************************************************************##
## Descripcion para el programador
##***********************************************************************************************##
#@ forma de llamado                                -- Descripcion para el usuario

elif [ "$1" = "proc" ]
then

	shift
	cat $* |
	tr -sc A-Za-z '\012'
	
##***********************************************************************************************##
## Descripcion para el programador
##***********************************************************************************************##
#@ forma de llamado                                -- Descripcion para el usuario

elif [ "$1" = "add" ]
then

	shift
	cat $* |	tr -sc A-Za-z '\012' >> $d_bin/salida/rejunte.txt
	
##***********************************************************************************************##
## Descripcion para el programador
##***********************************************************************************************##
#@ forma de llamado                                -- Descripcion para el usuario

elif [ "$1" = "dupli" ]
then

	cat $d_bin/salida/rejunte.txt | sort | uniq -u > $d_bin/salida/temp.txt
	rm -f $d_bin/salida/rejunte.txt
	cp $d_bin/salida/temp.txt $d_bin/salida/rejunte.txt
	rm -f $d_bin/salida/temp.txt
	
##***********************************************************************************************##
## Descripcion para el programador
##***********************************************************************************************##
#@ forma de llamado                                -- Descripcion para el usuario

elif [ "$1" = "pal" ]
then

	cat $d_bin/salida/rejunte.txt | egrep "$2"
	
##***********************************************************************************************##
## Ver Cosas Pendientes
##***********************************************************************************************##
elif [ "$1" = "pendiente" ]
then
	pendiente $0

##***********************************************************************************************##
## Ayuda
##***********************************************************************************************##
else
	ayuda $0
fi
