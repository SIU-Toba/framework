#!/bin/sh
#
# Runs at the end of git flow feature finish
#
# Positional arguments:
# $1    The friendly name of the branch
# $2    The origin remote
# $3    The full branch name (including the feature prefix)
#
# The following variables are available as they are exported by git-flow:
#
# MASTER_BRANCH - The branch defined as Master
# DEVELOP_BRANCH - The branch defined as Develop
#
NAME=$1
ORIGIN=$2
BRANCH=$3

# Implement your script here.

if [ $NAME = $DEVELOP_BRANCH ]; then
        echo 'No estas trabajando en un branch' 
    else
        #Restauro el id original de desarrollador
        variable=$(bin/toba instalacion_silenciosa set_id_branch --id-branch 0)
        #Vuelvo el contador a 0 y elimino el branch en cuestion
        $(git config --local --replace-all toba.developerid 0)
        $(git config --local --remove-section "toba.branch.$BRANCH")
    fi
exit 0
