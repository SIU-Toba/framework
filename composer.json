{
    "name": "siu-toba/framework",
    "description": "Framework de desarrollo web",
    "authors": [
        {
            "name": "SIU",
            "email": "toba@siu.edu.ar"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://satis.siu.edu.ar"
        }
    ],
    "config" : {
        "vendor-dir" : "./vendor",
        "bin-dir": "./bin"
    },
    "minimum-stability": "dev",
    "prefer-stable" : false,
    "require": {
        "siu/security-multitool": "1.0",
        "ircmaxell/random-lib" : "@dev",
        "siu-toba/rest": "@dev",
        "guzzlehttp/guzzle": "~6.0",
        "onelogin/php-saml": "2.3.0",
        "greenlion/PHP-SQL-Parser": "@dev"
    },
    "bin": ["bin/toba"],
    "autoload": {
      "psr-4": {
        "SIUToba\\Framework\\": "src/SIUToba/"
      }
    },
    "scripts": {
        "post-install-cmd": [
            "bower install"
        ],
        "post-update-cmd": [
            "bower update"
        ]
    }
}
